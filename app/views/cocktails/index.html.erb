<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/iRF0psyhz10);">
  <div class="container">
    <h1>Le Cocktail</h1>
    <p>Make Le Cocktail, Get Le Drunk</p>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card" style="background-image: url(https://source.unsplash.com/dmkmrNptMpw)">
          <%= cocktail.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


